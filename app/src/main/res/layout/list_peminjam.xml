<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="8dp"
                                                   android:layout_margin="8dp">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgListPeminjam"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="ImageContrastCheck"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtNamaListPeminjam"
            android:layout_marginHorizontal="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imgListPeminjam"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/txtTelpListPeminjam"
            android:textColor="#000000" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtTelpListPeminjam"
            app:layout_constraintTop_toBottomOf="@+id/txtNamaListPeminjam"
            app:layout_constraintStart_toStartOf="@+id/txtNamaListPeminjam"
            app:layout_constraintEnd_toEndOf="@+id/txtNamaListPeminjam" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/txtAlamatListPeminjam" android:textColor="#070707"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtAlamatListPeminjam"
            app:layout_constraintTop_toBottomOf="@+id/txtTelpListPeminjam"
            app:layout_constraintStart_toStartOf="@+id/txtTelpListPeminjam"
            app:layout_constraintEnd_toEndOf="@+id/txtTelpListPeminjam" app:layout_constraintBottom_toBottomOf="parent"
            android:minLines="2" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
